<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dia "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@+id/textview_evento"
        android:layout_toLeftOf="@+id/textview_evento_data" />

    <TextView
        android:id="@+id/textview_evento_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginRight="9dp"
        android:layout_alignTop="@+id/textView1"
        android:layout_toLeftOf="@+id/textView_evento_data_hora" />

    <TextView
        android:id="@+id/textView_evento_data_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã s"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/textView_evento_hora"
        android:layout_toLeftOf="@+id/textView_evento_hora" />

    <TextView
        android:id="@+id/textView_evento_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignTop="@+id/textview_evento_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView_evento_local"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textview_evento"
        android:layout_toRightOf="@+id/textView_evento_descricao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Local:"
        android:id="@+id/textView_evento_descricao"
        android:layout_below="@+id/textview_evento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>